{
    "distributor": {
      "address": "0.0.0.0",
      "port": 9091,
      "authentication": {
          "fullTypeName": "JetBlack.MessageBus.Common.Security.Authentication.LdapAuthenticator, JetBlack.MessageBus.Common.LdapAuthentication, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null",
          "args": ["ldap-primary.example.com", "636"]
      },  
      "heartbeatInterval": "00:00:00",
      "sslConfig": {
        "isEnabled": true,
        "certFile": "/etc/ssl/certs/my-host.crt",
        "keyFile": "/etc/ssl/private/my-host.key"
      },
      "allow": ["All"],
      "deny": ["None"],
      "isAuthorizationRequired": false
    }
  }