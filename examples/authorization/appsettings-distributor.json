{
    "distributor": {
      "address": "0.0.0.0",
      "port": 9091,
      "authentication": {
          "fullTypeName": "JetBlack.MessageBus.Common.Security.Authentication.PasswordFileAuthenticator, JetBlack.MessageBus.Common.PasswordFileAuthentication, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null",
          "args": ["passwords.json"]
      },  
      "heartbeatInterval": "00:00:00",
      "sslConfig": {
        "isEnabled": true,
        "certFile": "%HOME%/.keys/ugsb-rbla01.crt",
        "keyFile": "%HOME%/.keys/ugsb-rbla01.key"
      },
      "allow": ["None"],
      "deny": ["All"],
      "isAuthorizationRequired": true,
      "feedRoles": {
          "UNAUTH": {
              "isAuthorized": false,
              "allow": ["All"],
              "deny": ["None"]
          },
          "AUTH": {
            "isAuthorized": true,
            "allow": ["None"],
            "deny": ["All"],
            "interactorRoles": {
                "%HOSTNAME%": {
                    "tom": {
                        "allow": ["Subscribe"],
                        "deny": ["None"]
                    },
                    "dick": {
                        "allow": ["Subscribe"],
                        "deny": ["None"]
                    },
                    "harry": {
                        "allow": ["Publish", "Notify"],
                        "deny": ["None"]
                    },
                    "mary": {
                        "allow": ["Authorize"],
                        "deny": ["None"]
                    }
                }
            }
        }
      }
    }
  }